<Window x:Class="MonoMax.OpenGLWpfDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MonoMax.OpenGLWpfDemo"
        xmlns:gl="clr-namespace:MonoMax.WPFGLControl;assembly=MonoMax.WPFGLControl"
        mc:Ignorable="d"
        Title="MainWindow" Height="480" Width="640">
    <Grid>
        <gl:WPFGLControl x:Name="glControl" 
                         GLRender="glControl_GLRender" 
                         UpdateStrategy="D3DSurface"
                         UseSeperateRenderThread="True">
        </gl:WPFGLControl>
    </Grid>
</Window>
